<div class="container">
	<div class="row">
		
		<div class="col-md-8">
			<% if @post.image_content_type %>
				<%= image_tag @post.image.url, class: "img-thumbnail"%>
			<% end %>				
		</div>

		<div class="col-md-4">
			<%= form_for @post, :html => { :multipart => true } do |f| %>
				<h2>Title</h2>
				<%= f.text_field :title, class: "form-control" %>
				
				<h2>Description</h2>
				<%= f.text_area :description, size: "30x10", class: "form-control" %>
				<br>

				<%= f.submit "Update", class: "btn btn-success" %>
			<% end %>
		</div>
		
	</div>
</div>